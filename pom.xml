                  <fork>true</fork>
                </configuration>
              </plugin>
              <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <configuration>
                  <jvm>/opt/jdk/jdk1.6.0/bin/java</jvm>
                  <forkMode>once</forkMode>
                </configuration>
              </plugin>
            </plugins>
          </build>
